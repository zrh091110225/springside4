<?xml version="1.0" encoding="UTF-8"?>
<!-- 设置用于包装的模板所在的位置 -->
<decorators defaultdir="/WEB-INF/layouts/">
    <!--模板忽略的资源位置-->
	<excludes>
		<pattern>/static/*</pattern>
		<pattern>/api/*</pattern>
	</excludes>

    <!--default.jsp是名为“default”的decorator所使用的模板页面-->
	<decorator name="default" page="default.jsp">
		<pattern>/*</pattern>
	</decorator>
</decorators>
